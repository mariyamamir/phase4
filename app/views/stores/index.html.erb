<p id="notice"><%= notice %></p>

<h1 class="display-6" style="color:black; text-align:center;">Stores at A&M Creamery</h1>
      <hr class="my-4">
      <br>
      <br>
<p>
  
  <% if (!@active_stores.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#FF6666; width:230px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Active Stores
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#FF6666;color:white;">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Street</th>
                  <th scope="col">City</th>
                  <th scope="col">State</th>
                  <th scope="col">Zip</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Latitude</th>
                  <th scope="col">Longitude</th>
                  <th scope="col">Active</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                  <% @active_stores.each do |store| %>
                  <tr>
                    <td><%= store.name %></td>
                    <td><%= store.street %></td>
                    <td><%= store.city %></td>
                    <td><%= store.state %></td>
                    <td><%= store.zip %></td>
                    <td><%= store.phone %></td>
                    <td><%= store.latitude %></td>
                    <td><%= store.longitude %></td>
                    <td><%= store.active %></td>
                    <td><%= link_to 'Show', store %></td>
                    <td><%= link_to 'Edit', edit_store_path(store) %></td>
                    <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
  <%end%>
<br>
<% if (!@inactive_stores.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
